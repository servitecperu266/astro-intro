---
const nav = [
	{ text: "index", href: "/index.html" },
	{ text: "about", href: "/about" },
	{ text: "services", href: "/services" },
	{ text: "post", href: "/post" },
];
---

<nav>
	<ul>
		{
			nav.map((item) => (
				<li>
					<a href={item.href}>{item.text}</a>
				</li>
			))
		}
	</ul>
</nav>

<style>
	nav {
		background-color: #c2c2c2;
	}
	ul {
		display: flex;
		gap: 1em;
		list-style: none;
	}
	li {
	}
	li a {
		color: #fff;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.4em;
	}
</style>
